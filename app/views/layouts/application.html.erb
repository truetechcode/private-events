<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <style>
    body{
      
    }
    nav, h1:first-child{
      text-align: center;
    }
    nav ul li {
      display: inline-block;
    }
    form label{
      display: block;
    }
    form input{
      display: block;
      width: 200px;
      margin: 10px 0px;
    }

    form textarea{
      width: 200px;
      height: 100px;
      margin-bottom: 10px;      
    }
    .alert{
      text-align: center;
      font-weight: bold;
    }
    .alert.danger {
      color: red;
    }
    .alert.success {
      color: green;
    }
    </style>
  </head>
  <body>
  <h1>Private Events</h1>
    <nav>
    <ul>
    <% if current_user %>
    <li><%= link_to "Profile", user_path(current_user.id) %></li>
    <li><%= link_to "Events", events_path() %></li>
    <li><%= link_to "Log Out", users_logout_path() %></li>
    <% else %>
    <li><%= link_to "Sign Up", new_user_path() %></li>    
    <li><%= link_to "Sign In", new_session_path() %></li>    
    <% end %>
    </ul>
    </nav>
        <% flash.each do |name, message| %>
      <p class='alert <%= "#{name}" %>'><i><%= "#{message}" %></i></p>
    <% end %>
    <%= yield %>
  </body>
</html>
