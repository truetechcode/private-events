<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <style>
    body{
      
    }
    nav, h1:first-child{
      text-align: center;
    }
    nav ul li {
      display: inline-block;
    }
    form label{
      display: block;
    }
    form input{
      display: block;
      width: 200px;
      margin: 10px 0px;
    }

    form textarea{
      width: 200px;
      height: 100px;
      margin-bottom: 10px;      
    }
    .alert{
      /* text-align: center; */
      font-weight: bold;
      color: red;
    }
    </style>
  </head>
  <body>
  <h1>Private Events</h1>
    <% if !current_user.nil? %>
    <nav>
    <ul>
    <li><%= link_to "Profile", user_path(current_user.id) %></li>
    <li><%= link_to "Events", events_path() %></li>
    </ul>
    </nav>
    <% end %>
        <% flash.each do |name, message| %>
      <p class="alert"><i><%= "#{name}: #{message}" %></i></p>
    <% end %>
    <%= yield %>
  </body>
</html>
