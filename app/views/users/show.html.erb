<div class="col-12">
<h1>Events</h1>
<% if @prev_events.size > 0 %>
<h3>Past Events</h3>
<ul>
<% @prev_events.uniq.each do |event|%>
<li><%= event.description %> | <%= event.date %></li>
<% end %>
</ul>
<% end %>

<% if @upcoming_events.size > 0 %>
<h3>Upcoming Events</h3>
<ul>
<% @upcoming_events.uniq.each do |event|%>
<li><%= event.description %> | <%= event.date %></li>
<% end %>
</ul>
<% end %>
<%= link_to "Create a new event", new_event_path, class: "btn btn-primary" %>
</div>