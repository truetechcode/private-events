<h1>Events</h1>

<h3>Created Events</h3>
<ul>
<% @created_events.each do |event|%>
<li><%= event.description %> | <%= event.date %></li>
<% end %>
</ul>

<h3>Past Events</h3>
<ul>
<% @prev_events.uniq.each do |event|%>
<li><%= event.description %> | <%= event.date %></li>
<% end %>
</ul>

<h3>Upcoming Events</h3>
<ul>
<% @upcoming_events.uniq.each do |event|%>
<li><%= event.description %> | <%= event.date %></li>
<% end %>
</ul>
<%= link_to "(Create a new event)", new_event_path %>