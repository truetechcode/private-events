<div class="col-form mx-auto text-left">
<%= form_for(@event) do |f| %>

  <%= f.label :description %>
  <%= f.text_area :description, placeholder: "The description of the event here....", :required => true %>

  <%= f.label :date %>
  <%= f.date_field :date %>

  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>
</div>